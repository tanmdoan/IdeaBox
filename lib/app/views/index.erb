    <form action='/' method='POST'>
      <p>
        Your Idea:
      </p>
      <div>Title:</div>
      <input type='text' name='idea[title]'/><br/>
      <div>Description:</div>
      <textarea name='idea[description]'>Type your idea here...</textarea><br/>
      <div>Tag:</div>
       <input type='text' name='idea[tag]'/><br/>
       <input type='submit'/>
    </form>

    <h3>Existing Ideas</h3>

    <ul>
      <% ideas.each do |idea| %>
        <li>
          <%= idea.title %> (<%= idea.id %>)<br/>
          <%= idea.description %><br/>
          tags: <% idea.tag.each do |tag| %>
          <a href="/<%= tag %>/tag"><%= tag %></a>
          <% end %>
          </br><a href="/<%= idea.id %>/edit">Edit</a>
          <form action='/<%= idea.id %>/like' method='POST' style="display: inline">
            <input type='submit' value="+"/>
          </form>
          <form action="/<%= idea.id %>" method="POST">
           <input type="hidden" name="_method" value="DELETE">
           <input type="submit" value="delete"/>
          </form>
        </li>
      <% end %>
    </ul>
    <p>
    <div>Sort by tags:
       <form action="/sorted_tags" method="get">
         <input type="text" name=tags>
         <input type="submit" value="Sort!">
       </form>
    </div>
    </p>
